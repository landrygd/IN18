{
  "name": "in18",
  "main": "electron/index.js",
  "version": "1.2.0",
  "author": "Landry and Deackor",
  "homepage": "https://deakcor.itch.io/in18",
  "scripts": {
    "serve": "ng serve",
    "build": "ionic build --prod --release",
    "prod": "ng build -prod",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "start": "electron .",
    "electron": "ionic build && ionic cap copy && electron .",
    "mac-release": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=src/assets/icon.icns --prune=true --out=release-builds",
    "windows-release": "electron-packager . electron-tutorial-app --overwrite --asar=true --platform=win32 --arch=ia32 --icon=src/assets/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName='Electron Tutorial App'",
    "linux-release": "electron-packager . electron-tutorial-app --overwrite --asar=true --platform=linux --arch=x64 --icon=src/assets/icon.png --prune=true --out=release-builds",
    "mac-build": "electron-installer-dmg ./release-builds/ionic-desktop-darwin-x64/ionic-desktop.app builds/ionic-desktop",
    "windows-build": "node src/windows-build.js",
    "electron:win": "electron-packager ./electron IN18 --overwrite --asar=true --platform=win32 --arch=ia32 --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName='IN18' --icon=./electron/icon/favicon_invert.ico",
    "electron:linux": "electron-packager ./electron IN18 --overwrite --asar=true --platform=linux --arch=x64 --icon=./electron/icon/favicon_invert.png --prune=true --out=release-builds",
    "electron:mac": "electron-packager ./electron IN18 --overwrite --platform=darwin --arch=x64 --prune=true --out=release-builds --icon=./electron/icon/favicon_invert.icns"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^12.2.0",
    "@angular/core": "^12.2.0",
    "@angular/forms": "^12.2.0",
    "@angular/platform-browser": "^12.2.0",
    "@angular/platform-browser-dynamic": "^12.2.0",
    "@angular/router": "^12.2.0",
    "@angular/service-worker": "^12.2.0",
    "@capacitor-community/electron": "^1.4.2",
    "@capacitor/core": "^3.1.2",
    "@capacitor/electron": "^2.4.8",
    "@ionic-native/core": "^5.35.0",
    "@ionic-native/file": "^5.35.0",
    "@ionic-native/file-transfer": "^5.35.0",
    "@ionic-native/splash-screen": "^5.35.0",
    "@ionic-native/status-bar": "^5.35.0",
    "@ionic/angular": "^5.6.13",
    "electron": "^11.0.5",
    "file-saver": "^2.0.5",
    "ionic-angular": "^3.9.10",
    "jszip": "^3.7.1",
    "ngx-dropzone": "^3.0.0",
    "ngx-electron": "^2.2.0",
    "rxjs": "^6.5.0",
    "tslib": "^2.3.0",
    "zone.js": "^0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^12.2.0",
    "@angular/cli": "12.2.0",
    "@angular/compiler": "^12.2.0",
    "@angular/compiler-cli": "^12.2.0",
    "@angular/language-service": "^12.2.0",
    "@capacitor/cli": "^3.1.2",
    "@capacitor/core": "^3.1.2",
    "@ionic/angular-toolkit": "^4.0.0",
    "@types/jasmine": "^3.8.2",
    "@types/jasminewd2": "~2.0.10",
    "@types/node": "^16.4.12",
    "codelyzer": "^6.0.2",
    "electron": "^11.0.5",
    "electron-installer-dmg": "^3.0.0",
    "electron-packager": "^15.3.0",
    "jasmine-core": "~3.8.0",
    "jasmine-spec-reporter": "~7.0.0",
    "karma": "^6.3.4",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.3",
    "karma-jasmine": "~4.0.1",
    "karma-jasmine-html-reporter": "^1.7.0",
    "protractor": "^7.0.0",
    "ts-node": "~10.1.0",
    "tslint": "^6.1.3",
    "typescript": "^4.3.5"
  },
  "description": "A i18n translator",
  "cordova": {
    "plugins": {
      "cordova-plugin-file": {},
      "cordova-plugin-file-transfer": {}
    }
  }
}
